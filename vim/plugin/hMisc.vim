" Usage
"		,f	Folding
"		\l	Show <TAB>, <EOL>
"
"###############################################################################

" Folding ---------------------------------------------------------------------"
se		fdm=marker
map		,f		v]}zf
"------------------------------------------------------------------------------"

"	Show Invisible Character ----------------------------------------------------"
se		lcs=tab:▸\ ,eol:¬
nmap	<leader>l		:set list!<CR>
"------------------------------------------------------------------------------"

"	Show Trailing Whitespace ----------------------------------------------------"
hi	BadWhitespace ctermbg=Red		guibg=Red
mat	BadWhitespace	/^\t\+/
mat	BadWhitespace	/\s\+$/
"------------------------------------------------------------------------------"
